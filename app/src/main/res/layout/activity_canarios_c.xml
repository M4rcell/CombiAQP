<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marcel.combiaqp.canariosC">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CANARIOS C"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:src="@drawable/buscanario"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOSTRAR RUTA"
        android:id="@+id/btn_ruta_canarioC"
        android:onClick="Web_CanarioC"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true" />

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/web_canariosC"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_ruta_canarioC"
        android:layout_alignStart="@+id/btn_ruta_canarioC" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOSTRAR PRECIOS"
        android:id="@+id/btn_precio_canariosC"
        android:layout_below="@+id/btn_ruta_canarioC"
        android:layout_centerHorizontal="true"
        android:onClick="mostrar_precios" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_precio_canariosC"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:id="@+id/grid_canarios_C">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Precio de Pasaje :"
            android:id="@+id/textView7"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="S/.0.80"
            android:id="@+id/textView8"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pasado 21:00 hrs."
            android:id="@+id/textView9"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="s/1.00"
            android:id="@+id/textView10"
            android:layout_row="1"
            android:layout_column="1" />
    </GridLayout>

</RelativeLayout>